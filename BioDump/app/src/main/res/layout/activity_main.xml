<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    android:scrollbars="vertical"
    tools:context=".MainActivity"


    >

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20sp"
        app:layout_constraintHeight_percent=".4"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circle_progressbar"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:progress="90"
        />

    <TextView
        android:id="@+id/AQI_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_181"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#58b368"
        app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/progress_bar"
        app:layout_constraintTop_toTopOf="@+id/progress_bar" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
            android:layout_marginTop="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent=".9"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="350dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"


            android:layout_height="0dp"
            android:background="@drawable/bg1"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2679dp"
                android:background="@drawable/bg1"


                >


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="30dp"
                    android:layout_height="65dp"


                    android:layout_marginTop="0dp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/ic_pollution_level" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="40dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/pollution_level"
                    android:textAlignment="center"
                    android:textColor="#C3C1C1"


                    android:textSize="20sp"
                    tools:text="Pollution Level" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="240dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/unhealthy"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="19sp"
                    tools:text="Unhealthy" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="60dp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/ic_co2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="40dp"
                    android:layout_marginTop="80dp"
                    android:text="@string/pollutants"
                    android:textAlignment="center"


                    android:textColor="#C3C1C1"
                    android:textSize="20sp"
                    tools:text="Pollutants" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="245dp"
                    android:layout_marginTop="75dp"

                    android:text="@string/pm2_5"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    tools:text="PM2.5" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="120dp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/ic_air_quality" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="40dp"
                    android:layout_marginTop="140dp"
                    android:text="@string/air_quality"
                    android:textAlignment="center"


                    android:textColor="#C3C1C1"
                    android:textSize="20sp"
                    tools:text="Air Quality" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="245dp"
                    android:layout_marginTop="140dp"


                    android:text="@string/_180"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    tools:text="180" />


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="175dp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/ic_temperature" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="40dp"
                    android:layout_marginTop="195dp"

                    android:text="@string/temperature"


                    android:textAlignment="center"
                    android:textColor="#C3C1C1"
                    android:textSize="20sp"
                    tools:text="Temperature" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="245dp"
                    android:layout_marginTop="195dp"

                    android:text="@string/_35c"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    tools:text="35C" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_marginTop="300dp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/advices2" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/colorBlueAsh"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_navigation"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>

